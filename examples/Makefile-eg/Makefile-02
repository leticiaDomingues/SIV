# Objects

OBJECTS = main.o circle.o rectangle.o square.o

BIN = main

# Default target

all: $(BIN)

# Binary

$(BIN) : $(OBJECTS)
	gcc $^ -o $@

# Objects rules

main.o : main.c circle.h rectangle.h square.h
	gcc -I. -c $<

circle.o : circle.c circle.h
	gcc -I. -c $<

rectangle.o : rectangle.c
	gcc -I. -c $<

square.o : square.c rectangle.h
	gcc -I. -c $<

# Cleaning

.PHONY: clean

clean:
	rm -f  $(OBJECTS) $(BIN)
	rm -f *~ \#*



